{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "node": true
  },
  "root": true,
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },

  "overrides": [
    {
      "files": "*.json",
      "rules": {
        "quotes": ["error", "double"],
        "semi": ["error", "never"]
      }
    }
  ]
}
